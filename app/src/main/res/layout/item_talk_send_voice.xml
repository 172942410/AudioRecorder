<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_talk"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    tools:viewBindingIgnore="true">
    <LinearLayout
        android:id="@+id/voice_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|end"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="2dp"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:visibility="visible"
        tools:visibility="visible"
        >
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="@dimen/item_voice_height"
            android:layout_height="@dimen/item_voice_height"
            android:src="@drawable/baseline_refresh_24"
            android:background="@null"
            android:text=""
            android:layout_gravity="center"
            android:textSize="13dp"
            android:id="@+id/button_failed"
            />
        <ProgressBar
            android:layout_width="@dimen/item_progress_size"
            android:layout_height="@dimen/item_progress_size"
            android:id="@+id/progress"
            android:layout_gravity="center"
            android:visibility="gone"
            />
    <FrameLayout
        android:id="@+id/message_layout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:background="@drawable/panel_amber"
        android:clipToPadding="false"
        android:elevation="@dimen/toolbar_elevation"
        android:layout_marginStart="@dimen/item_msg_avatar"
        android:layout_marginEnd="@dimen/item_msg_avatar"
        >
            <ImageButton
                android:id="@+id/btn_play"
                android:layout_width="@dimen/item_voice_height"
                android:layout_height="@dimen/item_voice_height"
                android:layout_gravity="center_vertical|start"
                android:layout_marginEnd="@dimen/spacing_zero"
                android:adjustViewBounds="true"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_play"
                android:tint="@color/white"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_voice_height"
            android:paddingStart="@dimen/item_voice_height"
            >
        <com.perry.audiorecorder.app.widget.SimpleWaveformView
            android:id="@+id/item_waveform"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="@dimen/spacing_zero"
            android:layout_marginTop="@dimen/spacing_zero"
            android:layout_marginEnd="@dimen/spacing_zero"
            android:layout_marginBottom="@dimen/spacing_zero" />
        <SeekBar
            android:id="@+id/item_play_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:max="1000"
            android:progress="0"
            />
            <TextView
                android:id="@+id/list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:paddingStart="@dimen/spacing_tiny"
                android:paddingTop="@dimen/spacing_tiny"
                android:paddingEnd="@dimen/spacing_tiny"
                android:textColor="@color/text_primary_light"
                android:textSize="@dimen/text_normal"
                tools:text="7896年76月58日 36点89分78秒"
                android:maxLength="21"
                android:layout_gravity="end"
                android:visibility="invisible"
                />
        </FrameLayout>
        <TextView
            android:id="@+id/list_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:maxLines="1"
            android:maxLength="21"
            android:paddingTop="@dimen/item_margin_zero"
            android:paddingStart="@dimen/item_margin_lr"
            android:paddingEnd="@dimen/item_margin_lr"
            android:textColor="@color/text_primary_light2"
            android:textSize="@dimen/text_ss"
            android:visibility="visible"
            tools:text="@string/app_name"
            android:ellipsize="start"
            />

        <TextView
            android:id="@+id/list_item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:maxLines="1"
            android:paddingStart="@dimen/item_margin_lr"
            android:paddingTop="2dp"
            android:paddingEnd="@dimen/item_margin_lr"
            android:paddingBottom="@dimen/item_margin_zero"
            android:textColor="@color/text_primary_light2"
            android:textSize="@dimen/text_ss"
            tools:text="M4a, 44.1kHz, 128kbps, Stereo"
            android:layout_gravity="end|bottom"
            />
    </FrameLayout>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:layout_gravity="bottom"
        android:background="@color/divider_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|bottom"
        android:gravity="bottom"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginEnd="56dp"
        android:elevation="@dimen/toolbar_elevation"
        android:orientation="vertical"

        >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/list_item_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|end"
                android:adjustViewBounds="true"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="@null"
                android:drawableStart="@drawable/ic_bookmark_bordered_small"
                android:lines="1"
                android:paddingEnd="5dp"
                android:scaleType="center"
                android:singleLine="true"
                android:text="链云AI"
                android:textSize="12dp"
                android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/item_duration_cur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingStart="@dimen/spacing_tiny"
                android:textColor="@color/text_primary_light2"
                android:textSize="@dimen/text_small"
                tools:text="60/" />
            <TextView
                android:id="@+id/item_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingEnd="@dimen/spacing_tiny"
                android:textColor="@color/text_primary_light2"
                android:textSize="@dimen/text_small"
                tools:text="60''" />
        </LinearLayout>
    </LinearLayout>

    <com.perry.audiorecorder.app.widget.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_iv_avatar"
        android:layout_width="@dimen/item_avatar"
        android:layout_height="@dimen/item_avatar"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="@dimen/item_msg_avatar"
        android:background="?android:selectableItemBackgroundBorderless"
        android:src="@mipmap/logo_lianyun"
        app:civ_border_color="#DD44FFFF"
        app:civ_border_width="2dp"
        app:civ_fill_color="#EEFFFFFF" />
</FrameLayout>
