<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

	<LinearLayout
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

		<ImageButton
				android:id="@+id/btn_back"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:contentDescription="@null"
				android:layout_gravity="start"
				android:background="?android:selectableItemBackground"
				android:padding="@dimen/spacing_normal"
				android:src="@drawable/ic_arrow_back"/>

		<TextView
				style="@style/Text.SectionLabel"
				android:layout_width="wrap_content"
				android:layout_height="@dimen/toolbar_height"
				android:gravity="center_vertical"
				android:paddingStart="@dimen/spacing_normal"
				android:paddingLeft="@dimen/spacing_normal"
				android:paddingEnd="@dimen/spacing_normal"
				android:paddingRight="@dimen/spacing_normal"
				android:text="@string/settings"
				/>

	</LinearLayout>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

		<TextView
				android:id="@+id/publicFiles"
				style="@style/Text.NormalLabel"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/store_records_public"
				android:drawableStart="@drawable/ic_public"
				android:layout_margin="@dimen/spacing_normal"
				android:drawablePadding="@dimen/spacing_double"
				/>

		<Switch
				android:id="@+id/swPublicDir"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/spacing_normal"
				android:layout_gravity="top"
				/>
	</LinearLayout>

	<TextView
			android:id="@+id/btnDeleteAll"
			style="@style/Text.NormalLabel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/delete_all"
			android:drawableStart="@drawable/ic_delete_forever"
			android:background="@drawable/button_selector"
			android:padding="@dimen/spacing_small"
			android:layout_margin="@dimen/spacing_small"
			android:drawablePadding="@dimen/spacing_double"
			/>

	<TextView
			android:id="@+id/btnLicences"
			style="@style/Text.NormalLabel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/open_source_licences"
			android:drawableStart="@drawable/ic_dna"
			android:background="@drawable/button_selector"
			android:padding="@dimen/spacing_small"
			android:layout_margin="@dimen/spacing_small"
			android:drawablePadding="@dimen/spacing_double"
			/>

	<TextView
			android:id="@+id/btnRate"
			style="@style/Text.NormalLabel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/rate_app"
			android:drawableStart="@drawable/ic_thumbs"
			android:background="@drawable/button_selector"
			android:padding="@dimen/spacing_small"
			android:layout_margin="@dimen/spacing_small"
			android:drawablePadding="@dimen/spacing_double"
			/>

	<TextView
			android:id="@+id/txtAbout"
			style="@style/Text.NormalLabel"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/app_name"
			android:gravity="bottom|center"
			android:textSize="@dimen/text_xmedium"
			android:background="@drawable/button_selector"
			android:padding="@dimen/spacing_normal"
			android:drawablePadding="@dimen/spacing_double"
			/>

</LinearLayout>
