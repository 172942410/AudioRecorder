<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
				 android:layout_width="match_parent"
				 android:layout_height="match_parent"
				 xmlns:tools="http://schemas.android.com/tools">

	<android.support.v7.widget.RecyclerView
			android:id="@+id/recycler_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			/>

	<LinearLayout
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

		<ImageButton
				android:id="@+id/btn_back"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:contentDescription="@null"
				android:layout_gravity="start"
				android:background="?android:selectableItemBackground"
				android:padding="@dimen/spacing_normal"
				android:src="@drawable/ic_arrow_back"/>

		<TextView
				style="@style/Text.SectionLabel"
				android:layout_width="wrap_content"
				android:layout_height="@dimen/toolbar_height"
				android:gravity="center_vertical"
				android:paddingStart="@dimen/spacing_normal"
				android:paddingLeft="@dimen/spacing_normal"
				android:paddingEnd="@dimen/spacing_normal"
				android:paddingRight="@dimen/spacing_normal"
				android:textColor="@color/text_primary_light"
				android:text="@string/records"
				/>

	</LinearLayout>

	<View
			android:id="@+id/bottomDivider"
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:elevation="@dimen/toolbar_elevation"
			android:background="@color/grey"
			android:layout_gravity="bottom"
			/>

	<ProgressBar
			android:id="@+id/progress"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"/>

	<TextView
			android:id="@+id/txtEmpty"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:layout_gravity="center"
			android:layout_marginTop="24dp"
			android:drawablePadding="@dimen/spacing_normal"
			android:drawableTop="@drawable/ic_audiotrack"
			android:textSize="@dimen/text_large"
			android:textColor="@color/text_primary_light"
			android:text="@string/no_records"
			tools:text="@string/app_name"
			tools:visibility="visible"
			/>

	<com.dimowner.audiorecorder.ui.widget.TouchLayout
			android:id="@+id/touch_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:clipToPadding="false"
			android:layout_gravity="bottom"
			android:layout_marginBottom="@dimen/spacing_small"
			android:layout_marginStart="@dimen/spacing_small"
			android:layout_marginEnd="@dimen/spacing_small"
			android:elevation="@dimen/toolbar_elevation"
			android:visibility="gone"
			android:background="@drawable/panel_amber"

			>

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

			<TextView
					android:id="@+id/txt_progress"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal"
					android:padding="@dimen/spacing_normal"
					android:textColor="@color/text_primary_light"
					android:textSize="@dimen/text_xlarge"
					android:textStyle="bold"
					tools:text="00:00:00"/>

			<FrameLayout
					android:layout_width="match_parent"
					android:layout_height="120dp"
					>

				<com.dimowner.audiorecorder.ui.widget.WaveformView
						android:id="@+id/record"
						android:layout_width="wrap_content"
						android:layout_height="120dp"
						android:layout_gravity="center"
						/>

				<ProgressBar
						android:id="@+id/wave_progress"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:visibility="gone"
						android:layout_gravity="center"/>

			</FrameLayout>

			<FrameLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="@dimen/spacing_small">

				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="start|bottom"
						android:textColor="@color/text_primary_light"
						android:layout_marginStart="@dimen/spacing_small"
						android:textSize="@dimen/text_normal"
						android:text="@string/zero_time"/>

				<TextView
						android:id="@+id/txt_name"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="bottom|center_horizontal"
						android:padding="@dimen/spacing_tiny"
						android:textColor="@color/text_primary_light"
						android:textSize="@dimen/text_xmedium"
						tools:text="Record 2321"/>

				<TextView
						android:id="@+id/txt_duration"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="end|bottom"
						android:textColor="@color/text_primary_light"
						android:layout_marginEnd="@dimen/spacing_small"
						android:textSize="@dimen/text_normal"
						tools:text="34:56"/>

			</FrameLayout>
			<ProgressBar
					android:id="@+id/play_progress"
					android:layout_width="match_parent"
					android:layout_height="2dp"
					android:indeterminate="false"
					android:max="1000"
					android:progress="20"
					android:progressDrawable="@drawable/progress_drawable"
					style="?android:attr/progressBarStyleHorizontal"
					/>

			<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom|center_horizontal"
					android:layout_margin="@dimen/spacing_small"
					android:orientation="horizontal">

				<ImageButton
						android:id="@+id/btn_prev"
						android:layout_width="@dimen/bottom_pnl_small_btn_size"
						android:layout_height="@dimen/bottom_pnl_small_btn_size"
						android:adjustViewBounds="true"
						android:background="?android:selectableItemBackgroundBorderless"
						android:contentDescription="@null"
						android:layout_gravity="center"
						android:scaleType="center"
						android:src="@drawable/ic_skip_previous"/>

				<View
						android:layout_width="0dp"
						android:layout_height="10dp"
						android:layout_weight="1"
						/>

				<ImageButton
						android:id="@+id/btn_delete"
						android:layout_width="@dimen/bottom_pnl_small_btn_size"
						android:layout_height="@dimen/bottom_pnl_small_btn_size"
						android:adjustViewBounds="true"
						android:background="?android:selectableItemBackgroundBorderless"
						android:contentDescription="@null"
						android:layout_gravity="center"
						android:scaleType="center"
						android:src="@drawable/ic_delete_forever_36"/>

				<ImageButton
						android:id="@+id/btn_play"
						android:layout_width="64dp"
						android:layout_height="64dp"
						android:adjustViewBounds="true"
						android:background="?android:selectableItemBackgroundBorderless"
						android:contentDescription="@null"
						android:layout_gravity="center"
						android:scaleType="center"
						android:layout_marginStart="@dimen/spacing_small"
						android:layout_marginEnd="@dimen/spacing_small"
						android:src="@drawable/ic_play_64"/>

				<ImageButton
						android:id="@+id/btn_stop"
						android:layout_width="@dimen/bottom_pnl_small_btn_size"
						android:layout_height="@dimen/bottom_pnl_small_btn_size"
						android:adjustViewBounds="true"
						android:background="?android:selectableItemBackgroundBorderless"
						android:contentDescription="@null"
						android:layout_gravity="center"
						android:scaleType="center"
						android:src="@drawable/ic_stop"/>

				<View
						android:layout_width="0dp"
						android:layout_height="10dp"
						android:layout_weight="1"
						/>
				<ImageButton
						android:id="@+id/btn_next"
						android:layout_width="@dimen/bottom_pnl_small_btn_size"
						android:layout_height="@dimen/bottom_pnl_small_btn_size"
						android:adjustViewBounds="true"
						android:background="?android:selectableItemBackgroundBorderless"
						android:contentDescription="@null"
						android:layout_gravity="center"
						android:scaleType="center"
						android:src="@drawable/ic_skip_next"/>

			</LinearLayout>
		</LinearLayout>
	</com.dimowner.audiorecorder.ui.widget.TouchLayout>

</FrameLayout>
