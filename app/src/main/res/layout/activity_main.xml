<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:context="com.dimowner.audiorecorder.ui.MainActivity">

	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:layout_marginStart="@dimen/spacing_double"
			android:layout_marginEnd="@dimen/spacing_double"
			android:layout_marginTop="@dimen/spacing_normal"
			android:layout_marginBottom="@dimen/spacing_double"
			android:textColor="@color/text_primary_light"
			android:textSize="@dimen/text_xlarge"
			android:textStyle="bold"
			android:text="@string/app_name"/>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:gravity="center"
			android:orientation="vertical">

		<TextView
				android:id="@+id/txt_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="top|center_horizontal"
				android:layout_marginBottom="@dimen/spacing_small"
				android:textColor="@color/text_primary_light"
				android:textSize="@dimen/text_large"
				android:text="@string/app_name"
				/>

		<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				>

			<com.dimowner.audiorecorder.ui.widget.WaveformView
					android:id="@+id/record"
					android:layout_width="wrap_content"
					android:layout_height="@dimen/waveform_height"
					/>

			<ProgressBar
					android:id="@+id/progress"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"/>
		</FrameLayout>

	</LinearLayout>

	<TextView
			android:id="@+id/txt_records_count"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="start"
			android:textColor="@color/text_primary_light"
			android:fontFamily="sans-serif-light"
			android:layout_marginStart="@dimen/spacing_double"
			android:textSize="@dimen/text_medium"
			android:text="@string/total_record_count"/>
	<TextView
			android:id="@+id/txt_total_duration"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="start"
			android:textColor="@color/text_primary_light"
			android:fontFamily="sans-serif-light"
			android:layout_marginStart="@dimen/spacing_double"
			android:textSize="@dimen/text_medium"
			android:text="@string/total_duration"/>

	<TextView
			android:id="@+id/txt_available_space"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="start"
			android:textColor="@color/text_primary_light"
			android:fontFamily="sans-serif-light"
			android:layout_marginStart="@dimen/spacing_double"
			android:textSize="@dimen/text_medium"
			android:visibility="gone"
			android:text="Available space: 34h:12m:22s "/>

	<TextView
			android:id="@+id/txt_duration"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:padding="@dimen/spacing_normal"
			android:textColor="@color/text_primary_light"
			android:textSize="@dimen/text_largest"
			android:textStyle="bold"
			android:text="00:00:00"/>

	<FrameLayout
			android:id="@+id/control_panel"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<ImageButton
				android:id="@+id/btn_settings"
				android:layout_width="@dimen/bottom_pnl_btn_size"
				android:layout_height="@dimen/bottom_pnl_btn_size"
				android:layout_marginTop="@dimen/spacing_small"
				android:adjustViewBounds="true"
				android:background="?android:selectableItemBackgroundBorderless"
				android:layout_gravity="start"
				android:clickable="true"
				android:contentDescription="@null"
				android:focusable="true"
				android:scaleType="centerInside"
				android:src="@drawable/ic_settings"/>

		<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:orientation="horizontal">

			<ImageButton
					android:id="@+id/btn_play"
					android:layout_width="@dimen/bottom_pnl_small_btn_size"
					android:layout_height="@dimen/bottom_pnl_small_btn_size"
					android:adjustViewBounds="true"
					android:background="?android:selectableItemBackgroundBorderless"
					android:clickable="true"
					android:contentDescription="@null"
					android:layout_gravity="center"
					android:focusable="true"
					android:visibility="invisible"
					android:scaleType="center"
					android:src="@drawable/ic_play"/>

			<ImageButton
					android:id="@+id/btn_record"
					android:layout_width="@dimen/bottom_pnl_btn_size"
					android:layout_height="@dimen/bottom_pnl_btn_size"
					android:layout_margin="@dimen/spacing_small"
					android:adjustViewBounds="true"
					android:background="?android:selectableItemBackgroundBorderless"
					android:clickable="true"
					android:contentDescription="@null"
					android:focusable="true"
					android:scaleType="centerInside"
					android:src="@drawable/ic_record"/>

			<ImageButton
					android:id="@+id/btn_stop"
					android:layout_width="@dimen/bottom_pnl_small_btn_size"
					android:layout_height="@dimen/bottom_pnl_small_btn_size"
					android:adjustViewBounds="true"
					android:background="?android:selectableItemBackgroundBorderless"
					android:clickable="true"
					android:contentDescription="@null"
					android:layout_gravity="center"
					android:focusable="true"
					android:visibility="invisible"
					android:scaleType="center"
					android:src="@drawable/ic_stop"/>

		</LinearLayout>

		<ImageButton
				android:id="@+id/btn_records_list"
				android:layout_width="@dimen/bottom_pnl_btn_size"
				android:layout_height="@dimen/bottom_pnl_btn_size"
				android:layout_marginTop="@dimen/spacing_small"
				android:adjustViewBounds="true"
				android:background="?android:selectableItemBackgroundBorderless"
				android:layout_gravity="end"
				android:clickable="true"
				android:contentDescription="@null"
				android:focusable="true"
				android:scaleType="centerInside"
				android:src="@drawable/ic_list"/>

	</FrameLayout>

</LinearLayout>
