<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:context="com.dimowner.audiorecorder.ui.MainActivity">

	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:layout_marginStart="@dimen/spacing_double"
			android:layout_marginEnd="@dimen/spacing_double"
			android:layout_marginTop="@dimen/spacing_normal"
			android:textColor="@color/text_primary_light"
			android:textSize="@dimen/text_xlarge"
			android:textStyle="bold"
			android:text="@string/app_name"/>

	<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			>

		<com.dimowner.audiorecorder.ui.widget.WaveformView
				android:id="@+id/record"
				android:layout_width="wrap_content"
				android:layout_height="200dp"
				android:layout_gravity="center"
				/>

		<com.dimowner.audiorecorder.ui.widget.ScrubberView
				android:id="@+id/scrubber"
				android:layout_width="match_parent"
				android:layout_height="200dp"
				android:layout_gravity="center"
				/>

		<ProgressBar
				android:id="@+id/progress"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"/>

	</FrameLayout>

	<TextView
			android:id="@+id/txt_records_count"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="start"
			android:textColor="@color/text_primary_light"
			android:layout_marginStart="@dimen/spacing_double"
			android:textSize="@dimen/text_medium"
			android:text="@string/total_record_count"/>
	<TextView
			android:id="@+id/txt_total_duration"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="start"
			android:textColor="@color/text_primary_light"
			android:layout_marginStart="@dimen/spacing_double"
			android:textSize="@dimen/text_medium"
			android:text="@string/total_duration"/>
	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="start"
			android:textColor="@color/text_primary_light"
			android:layout_marginStart="@dimen/spacing_double"
			android:textSize="@dimen/text_medium"
			android:text="Available space: 34h:12m:22s "/>

	<TextView
			android:id="@+id/txt_duration"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:padding="@dimen/spacing_normal"
			android:textColor="@color/text_primary_light"
			android:textSize="@dimen/text_largest"
			android:textStyle="bold"
			android:text="00:00:00"/>

	<LinearLayout
			android:id="@+id/control_panel"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:orientation="horizontal"
			>

		<ImageButton
				android:id="@+id/btn_settings"
				android:layout_width="@dimen/bottom_pnl_btn_size"
				android:layout_height="@dimen/bottom_pnl_btn_size"
				android:layout_marginTop="@dimen/spacing_small"
				android:adjustViewBounds="true"
				android:background="@drawable/button_selector"
				android:clickable="true"
				android:contentDescription="@null"
				android:focusable="true"
				android:scaleType="centerInside"
				android:src="@drawable/ic_round_settings"/>

		<ImageButton
				android:id="@+id/btn_clear"
				android:layout_width="@dimen/bottom_pnl_btn_size"
				android:layout_height="@dimen/bottom_pnl_btn_size"
				android:layout_margin="@dimen/spacing_small"
				android:adjustViewBounds="true"
				android:background="@drawable/button_selector"
				android:clickable="true"
				android:contentDescription="@null"
				android:focusable="true"
				android:scaleType="center"
				android:src="@drawable/delete_forever"/>

		<ImageButton
				android:id="@+id/btn_play"
				android:layout_width="@dimen/bottom_pnl_btn_size"
				android:layout_height="@dimen/bottom_pnl_btn_size"
				android:layout_marginTop="@dimen/spacing_small"
				android:adjustViewBounds="true"
				android:background="@drawable/button_selector"
				android:clickable="true"
				android:contentDescription="@null"
				android:focusable="true"
				android:scaleType="center"
				android:src="@drawable/play"/>

		<ImageButton
				android:id="@+id/btn_record"
				android:layout_width="@dimen/bottom_pnl_btn_size"
				android:layout_height="@dimen/bottom_pnl_btn_size"
				android:layout_margin="@dimen/spacing_small"
				android:adjustViewBounds="true"
				android:background="@drawable/button_selector"
				android:clickable="true"
				android:contentDescription="@null"
				android:focusable="true"
				android:scaleType="centerInside"
				android:src="@drawable/record"/>

		<ImageButton
				android:id="@+id/btn_records_list"
				android:layout_width="@dimen/bottom_pnl_btn_size"
				android:layout_height="@dimen/bottom_pnl_btn_size"
				android:layout_marginTop="@dimen/spacing_small"
				android:adjustViewBounds="true"
				android:background="@drawable/button_selector"
				android:clickable="true"
				android:contentDescription="@null"
				android:focusable="true"
				android:scaleType="centerInside"
				android:src="@drawable/ic_round_list"/>

	</LinearLayout>

</LinearLayout>
